{
	"manifest_version": 3,
	"name": "NumberCruncher",
	"version": "1.0.1",
	"action": "extension-index.html",
	"description": "Properties of numbers",
	"author": "Henk Denkt",
	"action": { 
		"default_popup": "extension-index.html",
		"default_title": "Decode from any site"
	},
	"content_scripts":
		[ 
			{ 
				"matches": ["http://*/*"],
				"js": [ 
					"js/jquery.min.js",
					"js/js.cookie.js",
					"js/bootstrap.bundle.min.js",
					"js/nouislider.min.js",
					"js/argon.min.js",
					"js/decoder/FigurateNumber.js",
					"js/decoder/StorageHandler.js",
				    "js/decoder/FigurateNumber.js",
				    "js/decoder/PrimeNumber.js",
				    "js/decoder/SpecialNumber.js",
				    "js/decoder/CoreNumbers.js",
				    "js/decoder/NumberProperties.js",
				    "js/decoder/NumberPropertiesTable.js",
				    "js/decoder/NumberOperation.js",
				    "js/decoder/HtmlElements.js",
				    "js/decoder/StorageHandler.js"
				],
				"css": 
					[
						"css/all.min.css",
						"css/extra.style.css"
				],
				"run_at": "document_end"
					
			}
		],
		"host_permissions": ["<all_urls>"],
		"permissions": 
			[
				"scripting",
				"storage",
				"activeTab"
			]
}